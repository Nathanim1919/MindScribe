
{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types/global.d.ts"],
  },
  "include": ["src/**/*","src/types/global.d.ts"],
  "exclude": ["node_modules"]
}

