{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
     "@lib/*": ["lib/*"],
    },
    "typeRoots": ["./node_modules/@types", "./src/types/global.d.ts"],
  },
  "include": ["src/**/*", "index.ts","src/types/global.d.ts"],
  "exclude": ["node_modules"],
  "files": ["src/types/global.d.ts"]
}
